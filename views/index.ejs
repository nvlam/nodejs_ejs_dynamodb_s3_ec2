<%- include("layout", { body: `
  <p><a href="/products/new">+ Add product</a></p>
  <table border="1" cellpadding="8">
    <tr>
      <th>Image</th><th>Name</th><th>Price</th><th>Actions</th>
    </tr>
    ${(products || []).map(p => `
      <tr>
        <td>${p.imageUrl ? `<img src="${p.imageUrl}" width="60" />` : ""}</td>
        <td>${p.name}</td>
        <td>${p.price}</td>
        <td>
          <a href="/products/${p.id}/edit">Edit</a>
          <form method="POST" action="/products/${p.id}?_method=DELETE" style="display:inline">
            <button type="submit">Delete</button>
          </form>
        </td>
      </tr>
    `).join("")}
  </table>
` }) %>
